{
  "manifest_version": 3,
  "name": "Firefox URL Shortener Hub",
  "version": "1.0.0",
  "description": "Raccourcir l'URL de l'onglet actif depuis un bouton natif Firefox.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api-ssl.bitly.com/*",
    "https://api.tinyurl.com/*",
    "https://api.rebrandly.com/*",
    "https://is.gd/*",
    "https://v.gd/*",
    "<all_urls>"
  ],
  "action": {
    "default_title": "URL Shortener",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "url-shortener-hub@example.local",
      "strict_min_version": "109.0"
    }
  }
}
